<resources>

    <style name="MainMenuTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item><!-- Remove the change account button -->
    </style>




    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->

        <!--Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:alertDialogStyle">@style/AlertDialogCustom</item>

    </style>



    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_background</item>
    </style>

    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/color_background</item>
    </style>


    <style name="editTextStyle">
        <!--<item name="android:background">@drawable/input_box</item>-->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="subSectionHeader">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/color_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="subSectionHeader.schReportCard">
        <item name="android:background">@color/colorPrimary</item>
    </style>







    <!--main menu style-->
    <!--<style name="MainMenuTheme" parent="@android:style/Theme.Holo.Light">-->
    <!--<item name="android:windowSoftInputMode">adjustPan</item>-->
    <!--<item name="colorPrimaryDark">@color/white</item>-->
    <!--<item name="colorPrimary">@color/white</item>-->
